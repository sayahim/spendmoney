<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/close_dialog_img"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="left"
            android:src="@drawable/ic_close_black" />

        <ImageView
            android:id="@+id/image_dialog_status_img"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_100sdp"
            android:visibility="gone"
            android:layout_margin="@dimen/_10sdp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/title_dialog_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:textColor="@color/text_black"
            android:gravity="left"
            android:text="Title Message"
            style="@style/text_status_title"
            />

        <TextView
            android:id="@+id/description_dialog_message_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:textColor="@color/text_black_primary"
            android:gravity="left"
            android:text="Title Message"
            style="@style/text_status_description"
            />

        <Button
            android:id="@+id/action_dialog_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/medium"
            android:text="@string/oke"
            style="@style/btn_primary"/>


    </LinearLayout>

</LinearLayout>