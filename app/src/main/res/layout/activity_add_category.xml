<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".category.AddCategory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/image_category"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/ic_food_black"
                />

            <EditText
                android:id="@+id/name_category_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Kategori"
                android:fontFamily="@font/regular_opensans"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textSize="@dimen/_14ssp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Icon Kategori"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textColor="@color/text_black"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/semi_bold_opensans"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add_category_ll"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/rounded_blue"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp">

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center|left"
            android:background="@drawable/ic_add_white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:fontFamily="@font/semi_bold_opensans"
            android:text="Kategori"
            android:textAllCaps="false"
            android:textColor="@color/text_white"
            android:textSize="@dimen/_14sdp" />

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>