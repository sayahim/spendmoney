<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_category"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <include
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                layout="@layout/layout_status_failure"
                android:layout_gravity="center"/>

            <io.supercharge.shimmerlayout.ShimmerLayout
                android:id="@+id/loading_category_shimmer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>
                <include layout="@layout/loading_list_category"/>

                </LinearLayout>

            </io.supercharge.shimmerlayout.ShimmerLayout>

        </FrameLayout>


        <Button
            android:id="@+id/add_new_category_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/white"
            android:text="+ Tambah Kategori Baru"
            android:textAllCaps="false"
            android:textColor="@color/text_black_primary"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone"
            />

    </LinearLayout>

</LinearLayout>