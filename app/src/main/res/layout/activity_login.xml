<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".auth.Login">

    <TextView
        style="@style/title_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:text="Login" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_100sdp">

            <ImageView
                android:id="@+id/close_login_img"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_close_black"
                android:layout_gravity="right|center"
                />

            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_40sdp"
                android:src="@mipmap/logo_app" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textAllCaps="false"
                style="@style/text_title_hint"
                />

            <EditText
                android:id="@+id/email_ed"
                style="@style/EditTextBorderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Email..."
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext"
                android:padding="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textAllCaps="false"
                style="@style/text_title_hint"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passinput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:gravity="center"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/ic_password_visible_selector"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#F3C16E">

            <EditText
                android:id="@+id/password_ed"
                style="@style/EditTextBorderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:hint="Masukkan Password..."
                android:inputType="textPassword"
                android:imeOptions="actionDone"
                android:padding="@dimen/_10sdp"
                />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_50sdp"
                android:background="@drawable/corner_green"
                android:text="LOGIN"
                android:textAllCaps="false"
                android:textColor="@color/text_white"
                android:textSize="@dimen/_14ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular_opensans"
                    android:text="Belum punya akun?"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/register_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:fontFamily="@font/medium"
                    android:text="Daftar disini"
                    android:textColor="@color/text_blue"
                    android:textSize="@dimen/_14ssp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>