<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".auth.Register">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:orientation="vertical"
            android:paddingTop="@dimen/_30sdp"
            android:paddingBottom="@dimen/_80sdp">

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_full"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/name_ed"
                style="@style/EditTextBorderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/name_full_hint"
                android:padding="@dimen/_10sdp"
                />

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"/>

            <EditText
                android:id="@+id/email_ed"
                style="@style/EditTextBorderEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_hint"
                android:padding="@dimen/_10sdp"
                />

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/gold"
                    android:text="Laki - Laki"
                    android:textSize="@dimen/_12ssp" />

                <RadioButton
                    android:id="@+id/female_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:buttonTint="@color/gold"
                    android:text="Perempuan"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:gravity="center"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/ic_password_visible_selector"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/gold">

                <EditText
                    android:id="@+id/password_ed"
                    style="@style/EditTextBorderData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/password_hint"
                    android:padding="@dimen/_10sdp"
                    />

            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                style="@style/text_title_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/password_konf"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:gravity="center"
                app:hintEnabled="false"
                app:passwordToggleDrawable="@drawable/ic_password_visible_selector"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/gold">

                <EditText
                    android:id="@+id/password_confirm_ed"
                    style="@style/EditTextBorderDataDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:hint="@string/password_confirm_hint"
                    android:padding="@dimen/_10sdp"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/register_btn"
        style="@style/btn_secondary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:text="REGISTER"
        android:layout_margin="@dimen/_5sdp"/>

</LinearLayout>