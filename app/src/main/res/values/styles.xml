<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
<!--        <item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">@dimen/_1sdp</item>
        <item name="tabPaddingStart">@dimen/_5sdp</item>
        <item name="tabPaddingEnd">@dimen/_5sdp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/indicator</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:fontFamily">@font/regular_opensans</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MyEditTextStyle" parent="android:Widget.EditText">
        <item name="android:textColor">@color/text_black_primary</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="android:fontFamily">@font/semi_bold_opensans</item>
        <item name="colorControlActivated">@color/indicator</item>
        <item name="colorControlNormal">@color/hint_color</item>
        <!--        <item name="android:padding">@dimen/_12ssp</item>-->
<!--        <item name="android:background">@android:drawable/editbox_background_normal</item>-->
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="title_toolbar" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/semi_bold_opensans</item>
        <item name="android:textColor">@color/text_black_primary</item>
        <item name="android:textSize">@dimen/_14ssp</item>

    </style>

    <style name="text_status" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:fontFamily">@font/regular_opensans</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_title" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/semi_bold_opensans</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="text_hint" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_hint</item>
        <item name="android:fontFamily">@font/regular_opensans</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="text_radio_button" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/regular_opensans</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="loading_style" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="text_edit" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:fontFamily">@font/regular_opensans</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="btn_primary" parent="android:Widget.Button">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:fontFamily">@font/semi_bold_opensans</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:background">@drawable/btn_rounded_blue</item>

    </style>


</resources>
